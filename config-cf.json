{
  "browser": {
    "browserName": "firefox",
    "isolated": true,
    "launchOptions": {
      "headless": true,
      "args": [
        "--no-sandbox",
        "--disable-dev-shm-usage"
      ]
    },
    "contextOptions": {
      "viewport": { "width": 1280, "height": 720 }
    }
  },
  "server": {
    "host": "0.0.0.0"
  },
  "capabilities": ["core", "tabs", "pdf"],
  "imageResponses": "omit",
  "outputDir": "/tmp/playwright-mcp-output"
}